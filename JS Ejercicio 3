//ejercicio#3

// Pedir al usuario que ingrese números separados por espacios
let entrada = prompt("Ingrese números separados por espacios:");

// Convertir los valores ingresados en una lista de enteros
let numeros = entrada.split(" ").map(Number);

// Calcular la suma de los números
let suma = numeros.reduce((acc, val) => acc + val, 0);

// Mostrar el resultado
console.log(La suma de los números ingresados es: ${suma});
