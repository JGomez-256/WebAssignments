<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Calculadora de Paga</title>
</head>
<body>

<script>
  // Solicitar horas trabajadas
  let horas = prompt("¿Cuántas horas has trabajado?");
  
  // Solicitar coste por hora
  let costoHora = prompt("¿Cuál es el coste por hora?");
  
  // Convertir los valores a número
  horas = parseFloat(horas);
  costoHora = parseFloat(costoHora);
  
  // Calcular la paga
  let paga = horas * costoHora;
  
  // Mostrar el resultado
  alert("La paga que te corresponde es: $" + paga.toFixed(2));
</script>

</body>
</html>
